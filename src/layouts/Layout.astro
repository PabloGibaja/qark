---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const {
  title="QArk - Centraliza tus pruebas de software en un único lugar",
  description = "Compatible con cualquier lenguaje y framework de pruebas. Integraciones con las principales herramientas de CI/CD, Jira, GitHub y más.",
  keywords = "QArk, pruebas software, test automation, CI/CD integration, dashboards QA, test results, selenium, pytest, jenkins, github actions, jira integration, test analytics, quality assurance, automated testing, test management",
  ogImage = "/miniatura-web.png",
  noIndex = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullOgImageURL = new URL(ogImage, Astro.site).toString();
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Inicializar tema ANTES de que se renderice el contenido -->
    <script is:inline>
      // Prevenir flash de contenido sin estilo
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="QArk" />
    <meta name="robots" content={noIndex ? "noindex, nofollow" : "index, follow"} />
    <meta name="theme-color" content="#3b82f6" />
    
    <!-- Canonical Link -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <!-- Añadir múltiples tamaños para diferentes contextos -->
    <meta property="og:image" content={fullOgImageURL} />
    <meta property="og:image:width" content="785" />
    <meta property="og:image:height" content="612" />
    <meta property="og:image:type" content="image/png" />
    
    <!-- Para Twitter, que prefiere 2:1 ratio -->
    <meta name="twitter:image" content={fullOgImageURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:image:alt" content="QArk - Centraliza tus pruebas de software" />
    <meta property="og:image:width" content="785" />
    <meta property="og:image:height" content="612" />
    <meta property="og:site_name" content="QArk" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImageURL} />
    <meta name="twitter:image:alt" content="QArk - Centraliza tus pruebas de software" />
    <meta name="twitter:site" content="@QArkApp" />
    <meta name="twitter:creator" content="@QArkApp" />
    
    <!-- LinkedIn Meta Tags -->
    <meta property="article:author" content="QArk" />
    <meta property="article:publisher" content="QArk" />
    
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    
    <!-- Devicons -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    
    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "QArk",
        "description": "Centraliza tus pruebas de software en un único lugar. Conecta tus pipelines, integra tus herramientas habituales y obtén insights avanzados y claros para tus equipos.",
        "url": "https://qark.app",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "Web",
        "softwareVersion": "1.0",
        "releaseNotes": "Plataforma de centralización de pruebas de software con integración CI/CD",
        "offers": {
            "@type": "Offer",
            "price": "39",
            "priceCurrency": "EUR",
            "priceValidUntil": "2025-12-31",
            "availability": "https://schema.org/InStock",
            "eligibleRegion": "ES"
        },
        "creator": {
            "@type": "Organization",
            "name": "QArk",
            "url": "https://qark.app",
            "logo": "https://qark.app/icon.png"
        },
        "featureList": [
            "Integración Universal de Tests",
            "Insights para Managers",
            "Integración con Pipelines CI/CD",
            "Integración con Jira",
            "Análisis Detallado de Fallos",
            "Dashboards Unificados",
            "Soporte Multi-lenguaje"
        ],
        "screenshot": fullOgImageURL,
        "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "ratingCount": "127"
        }
    })} />
    
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-300">
    <slot />
  </body>
</html>